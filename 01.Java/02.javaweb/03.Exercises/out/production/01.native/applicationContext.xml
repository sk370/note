<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans [
        <!ELEMENT beans (bean*)>
        <!ELEMENT bean (property*)>
        <!ELEMENT property (#PCDATA)>

        <!ATTLIST bean id ID #REQUIRED>
        <!ATTLIST bean class CDATA #IMPLIED>
        <!ATTLIST property name CDATA #IMPLIED>
        <!ATTLIST property ref IDREF #IMPLIED>
        ]>

<beans>
<!--    DAO层-->
    <bean id="userBasicDAO" class="iceriver.qqzone.dao.impl.UserBasicDAOImpl"/>
    <bean id="topicDAO" class="iceriver.qqzone.dao.impl.TopicDAOImpl"/>
    <bean id="replyDAO" class="iceriver.qqzone.dao.impl.ReplyDAOImpl"/>
    <bean id="hostReplyDAO" class="iceriver.qqzone.dao.impl.HostReplyDAOImpl"/>
<!--service层-->
    <bean id="userBasicService" class="iceriver.qqzone.service.impl.UserBasicServiceImpl">
        <property name="userBasicDAO" ref="userBasicDAO"/>
    </bean>
    <bean id="topicService" class="iceriver.qqzone.service.impl.TopicServiceImpl">
        <property name="topicDAO" ref="topicDAO"/>
        <property name="replyService" ref="replyService"/>
        <property name="userBasicService" ref="userBasicService"/>
    </bean>
    <bean id="replyService" class="iceriver.qqzone.service.impl.ReplyServiceImpl">
        <property name="replyDAO" ref="replyDAO"/>
        <property name="hostReplyService" ref="hostReplyService"/>
        <property name="userBasicService" ref="userBasicService"/>
    </bean>
    <bean id="hostReplyService" class="iceriver.qqzone.service.impl.HostReplyServiceImpl">
        <property name="hostReplyDAO" ref="hostReplyDAO"/>
    </bean>
<!--    controller层-->
    <bean id="user" class="iceriver.qqzone.controller.UserController">
        <property name="userBasicService" ref="userBasicService"/>
        <property name="topicService" ref="topicService"/>
    </bean>
    <bean id="topic" class="iceriver.qqzone.controller.TopicController">
        <property name="topicService" ref="topicService"/>
    </bean>
    <bean id="reply" class="iceriver.qqzone.controller.ReplyController">
        <property name="replyService" ref="replyService"/>
    </bean>
<!--page页面处理-->
    <bean id="page" class="iceriver.myssm.myspringmvc.PageController"/>

</beans>